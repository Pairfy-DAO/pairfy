{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,            
    "sourceMap": true,                  
    "declaration": true                 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
